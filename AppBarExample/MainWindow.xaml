<Window x:Class="AppBarExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="37" Width="240" WindowStyle="None" Background="Transparent" 
        AllowsTransparency="True" ShowInTaskbar="False" Foreground="#007acc" Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\GlassButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border BorderBrush="Black"
            BorderThickness="0,0,2,2"
            CornerRadius="15" MouseDown="FrameMovable">
        <Border.Background>
            <ImageBrush ImageSource="images\g.jpg"/>
        </Border.Background>
        <!--<Border.Effect>
            <BlurEffect KernelType="Gaussian" Radius="15" RenderingBias="Quality" />
        </Border.Effect>-->
        <Grid Margin="0,0,0,7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="5,5"></Setter>
                    <Setter Property="Padding" Value="5,5"></Setter>
                </Style>
            </Grid.Resources>

            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="AppBar" Click="toggleAppbar" Style="{StaticResource GlassButton}" Width="18" Height="18" Background="#FF660707"  Margin="10" >
                    <Image Width="18" Height="18" Source="images\vista_flag.png"/>
                </Button>
            </StackPanel>
            <TextBox Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="2,7,0,0" Grid.RowSpan="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180"/>
        </Grid>
    </Border>
</Window>
