<Window x:Class="AppBarExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="55" Width="240" WindowStyle="None" Background="Transparent" 
        AllowsTransparency="True" ShowInTaskbar="False" Foreground="#007acc">
    <Border x:Name="OuterGlow" Margin="10" Background="Transparent"
            BorderBrush="{Binding Foreground, ElementName=GlowWindow}"
            BorderThickness="5">
        <Border.Effect>
            <BlurEffect KernelType="Gaussian" Radius="15" RenderingBias="Quality" />
        </Border.Effect>
        <Grid Margin="0,0,0,7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="5,5"></Setter>
                    <Setter Property="Padding" Value="5,5"></Setter>
                </Style>
            </Grid.Resources>

            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="AppBar" Click="toggleAppbar" Content="Toggle"/>
            </StackPanel>
            <TextBox Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="2,7,0,0" Grid.RowSpan="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="155"/>
            <TextBlock Grid.Column="1" HorizontalAlignment="Left" FontSize="18" TextAlignment="Center" Margin="46,27,0,-53" Grid.Row="2" TextWrapping="Wrap" Text="Rakuten Desktop" VerticalAlignment="Top" Width="136" Height="29" Grid.ColumnSpan="2"/>

        </Grid>
    </Border>
    <!--            <Window.Background>
                <ImageBrush ImageSource="C:\git\AppBar\AppBarExample\img\g.jpg"/>
            </Window.Background>
    -->
</Window>
